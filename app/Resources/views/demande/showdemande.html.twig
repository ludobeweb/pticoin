{% block body %}
    <h2>Demande</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Image</th>
                <th>Description</th>
                <th>Estimation</th>
                <th>Demandeur</th>
                <th>Date</th>
                <th>Heures</th>
                <th>Telephone</th>
                <th>Categorie</th>
                <th>Localite</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ demande.id }}</td>
                <td>{{ demande.titre }}</td>               
                <td>
                    <div class ="imgcontainer">
                        <img class="image img-responsive" src ="{{asset('uploads/img/'~demande.img)}}" alt="{{demande.img}}"/>
                    </div>
                </td>
                <td class="description">{{ demande.description }}</td>
                <td>{{ demande.estimation }}</td>
                <td>{{ demande.demandeur }}</td>
                <td>{{ demande.dateparution|date("d/m/y") }}</td>
                <td>{{ demande.dateparution|date("h:m")}}</td>
                <td>{{ demande.telephone }}</td>
                <td>{{ demande.categorie }}</td>
                <td>{{ demande.localite }}</td>
            </tr>
        </tbody>
    </table>

            <a href="{{ path('mesdemandes') }}">
                <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-repeat"></span> Retour à la liste</button>
            </a>
 
            <a href="{{ path('editdemande', { 'id': demande.id }) }}">
                <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-wrench modifier"></span> Modifer</button>
            </a>
    
